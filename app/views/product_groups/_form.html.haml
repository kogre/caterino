= form_for @product_group do |f|
  - if @product_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_group.errors.count, "error")} prohibited this product_group from being saved:"
      %ul
        - @product_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ordering
    = f.number_field :ordering
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
